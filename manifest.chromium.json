{
  "name": "Steam Web Integration",
  "description": "Integrate your personal Steam information on the web, at your convenience!.",
  "homepage_url": "https://github.com/revadike/steamwebintegration",
  "version": "2.3.0",
  "author": "Revadike",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "Steam Web Integration",
    "default_icon": "images/icon256.png"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png",
    "256": "images/icon256.png"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "css/content.css",
        "css/fontawesome.min.css",
        "css/solid.min.css"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "resources": [
        "webfonts/fa-solid-900.woff2",
        "webfonts/fa-solid-900.ttf",
        "css/content.css",
        "css/fontawesome.min.css",
        "css/solid.min.css"
      ]
    }
  ],
  "permissions": [
    "storage",
    "unlimitedStorage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://store.steampowered.com/*"
  ]
}