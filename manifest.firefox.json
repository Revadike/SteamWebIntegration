{
  "name": "Steam Web Integration",
  "description": "Integrate your personal Steam information on the web, at your convenience!.",
  "homepage_url": "https://github.com/revadike/steamwebintegration",
  "version": "2.0.0",
  "author": "Revadike",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "Steam Web Integration",
    "default_icon": "images/icon.svg"
  },
  "icons": {
    "48": "images/icon.svg"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "css/fontawesome.min.css",
        "css/solid.min.css"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "web_accessible_resources": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "resources": [
        "webfonts/fa-solid-900.woff2",
        "webfonts/fa-solid-900.ttf",
        "css/fontawesome.min.css",
        "css/solid.min.css"
      ]
    }
  ],
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://bartervg.com/*",
    "https://store.steampowered.com/*",
    "https://steam-tracker.com/*"
  ]
}